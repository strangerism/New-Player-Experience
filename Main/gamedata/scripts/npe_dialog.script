local GAMETIME_STATE = {
	STOPPED = 0,
	INMOTION = 1 
}

local function change_gametime_to(state)
	exec_console_cmd("time_factor " .. state)
end

local function pause_game(pause)
	if pause then
		exec_console_cmd("freeze_time on")
	else
		exec_console_cmd("freeze_time off")
	end
	
end

